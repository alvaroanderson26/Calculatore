            android:id="@+id/btn16"
            android:layout_width="@dimen/btn_size1"
            android:layout_height="@dimen/btn_size2"
            android:tag="b"
            android:src="@drawable/division"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margen_size"
        >
