<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anderson.calculatore.MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0"
        android:inputType="number"
        android:text=""
        android:textSize="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margen_size"
        >
        <ImageButton
            android:id="@+id/btn1"
            android:layout_width="@dimen/btn_size1"
            android:layout_height="@dimen/btn_size2"
            android:tag="a"
            android:src="@drawable/borrar"
            />
        <ImageButton
            android:id="@+id/btn2"
            android:layout_width="@dimen/btn_size1"
            android:layout_height="@dimen/btn_size2"
            android:tag="b"
            android:src="@drawable/abrir"

            />
        <ImageButton
            android:id="@+id/btn3"
            android:layout_width="@dimen/btn_size1"
            android:layout_height="@dimen/btn_size2"
            android:tag="b"
            android:src="@drawable/cerrar"

            />
        <ImageButton
            android:id="@+id/btn4"
            android:layout_width="@dimen/btn_size1"
            android:layout_height="@dimen/btn_size2"
            android:tag="b"
            android:src="@drawable/suma"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margen_size"
        >
        <ImageButton
            android:id="@+id/btn5"
            android:layout_width="@dimen/btn_size1"
            android:layout_height="@dimen/btn_size2"
            android:tag="7"
            android:src="@drawable/siete"

            android:onClick="concatenar" />
        <ImageButton
            android:id="@+id/btn6"
            android:layout_width="@dimen/btn_size1"
            android:layout_height="@dimen/btn_size2"
            android:tag="8"
            android:src="@drawable/ocho"

            />
        <ImageButton
            android:id="@+id/btn7"
            android:layout_width="@dimen/btn_size1"
            android:layout_height="@dimen/btn_size2"
            android:tag="9"
            android:src="@drawable/nueve"

            />
        <ImageButton
            android:id="@+id/btn8"
            android:layout_width="@dimen/btn_size1"
            android:layout_height="@dimen/btn_size2"
            android:tag="b"
            android:src="@drawable/resta"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margen_size"
        >
        <ImageButton
            android:id="@+id/btn9"
            android:layout_width="@dimen/btn_size1"
            android:layout_height="@dimen/btn_size2"
            android:tag="a"
            android:src="@drawable/cuatro"

            />
        <ImageButton
            android:id="@+id/btn10"
            android:layout_width="@dimen/btn_size1"
            android:layout_height="@dimen/btn_size2"
            android:tag="b"
            android:src="@drawable/cinco"

            />
