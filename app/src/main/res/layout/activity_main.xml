            android:id="@+id/btn12"
            android:layout_width="@dimen/btn_size1"
            android:layout_height="@dimen/btn_size2"
            android:tag="b"
            android:src="@drawable/multiplicacion"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margen_size"
        >
        <ImageButton
            android:id="@+id/btn13"
            android:layout_width="@dimen/btn_size1"
            android:layout_height="@dimen/btn_size2"
            android:tag="a"
